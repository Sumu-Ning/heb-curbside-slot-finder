{
  "name": "H-E-B Curbside Slot Finder",
  "version": "1.1",
  "description": "H-E-B Curbside Slot Finder. Please be nice to H-E-B, and don't abuse it",
  "permissions": [
    "activeTab",
    "alarms",
    "declarativeContent",
    "storage",
    "cookies",
    "notifications",
    "*://*.heb.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/heb-16x16.png",
      "32": "images/heb-32x32.png"
    }
  },
  "icons": {
    "16": "images/heb-16x16.png",
    "32": "images/heb-32x32.png"
  },
  "manifest_version": 2
}
